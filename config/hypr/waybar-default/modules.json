{
    // Workspaces
    "hyprland/workspaces" : {
        "on-click": "activate",
        "active-only": false,
        "all-outputs": true,
        "format": "{}",
        "format-icons": {
			"urgent": "",
			"active": "",
			"default": ""
        },
        "persistent-workspaces": {
             "*": 4
        }       
    },

    // Taskbar
    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 18,
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "close",
        "ignore-list": [
           "Alacritty"
        ],
        "app_ids-mapping": {
            "firefoxdeveloperedition": "firefox-developer-edition"
        },
        "rewrite": {
            "Firefox Web Browser": "Firefox",
            "Foot Server": "Terminal"
        }
    },

    // Hyprland Window
    "hyprland/window": {
        "rewrite": {
            "(.*) - Brave": "$1",
            "(.*) - Chromium": "$1",
            "(.*) - Brave Search": "$1",
            "(.*) - Sofirem": "$1",
            "(.*) - ChatGPT": "$1",
            "(.*) - Sublime": "$1"
        },
        "separate-outputs": true
    },
    
    // Cliphist
    "custom/cliphist": {
        "format": "",
        "on-click": "sleep 0.1 && ~/.config//hypr/waybar-default/scripts/cliphist.sh",
        "on-click-right": "sleep 0.1 && ~/.config/hypr/waybar-default/scripts/cliphist.sh d",
        "on-click-middle": "sleep 0.1 && ~/.config/hypr/waybar-default/scripts/cliphist.sh w",
        "tooltip": false
    },

    // Updates Count
    "custom/updates": {
        "format": " {}",
        "tooltip-format": "{}",
        "escape": true,
        "return-type": "json",       
        "exec": "~/.config/hypr/waybar-default/scripts/updates.sh",
        "restart-interval": 60,
        "on-click": "alacritty -e ~/.config/hypr/waybar-default/scripts/installupdates.sh",
        "tooltip": false
    },

    // Wallpaper
    "custom/starter": {
        "format": "#",
        "tooltip": false
    },
    
    // Wallpaper
    "custom/wallpaper": {
        "format": "",
        "on-click": "~/.config/hypr/waybar-default/wallpaper-switcher; /usr/bin/mpv ~/.config/hypr/waybar-default/blup2.mp3",
        "on-click-right": "~/dotfiles/hypr/wallpaper.sh",
        "tooltip": false
    },

    // Waybar Themes
    "custom/waybarthemes": {
        "format": "",
        "on-click": "~/.config/hypr/change-waybar",
        "tooltip": false
    },
    
    // Settings
    /*"custom/settings": {
        "format": "",
        "on-click": "alacritty --class dotfiles-floating -e ~/.config/hypr/settings.sh",
        "tooltip": false
    },
    */

    // Keybindings
    "custom/keybindings": {
        "format": "?",
        "on-click": "~/.config/hypr/scripts/keybindings.sh",
        "tooltip": false
    },

    // Filemanager Launcher
    "custom/filemanager": {
        "format": "",
        "on-click": "thunar",
        "tooltip": false
    },

    // Sofirem Launcher
    "custom/sofi": {
        "format": "󰓦",
        "on-click": "sofi",
        "tooltip": false
    },

    // Sublime4 Launcher
   "custom/sublime": {
        "format": "󱚍",
        "return-type": "json",
        "on-click": "~/.config/hypr/waybar-default/scripts/launch_app2.sh",
        "interval": 1
    },

    // Thorium Browser Launcher
    "custom/browser": {
        "format": "",
        "on-click": "thorium-browser",
        "tooltip": false
    },    

    // ChatGPT Launcher
    "custom/chatgpt": {
        "format": "",
        "on-click": "/usr/bin/chat-gpt",
        "tooltip": false
    },

    // Windows VM
    "custom/windowsvm": {
        "format": "",
        "on-click": "~/.config/hypr/scripts/launchvm.sh",
        "tooltip": false
    },

    // Wofi Application Launcher
    "custom/appmenu": {
        "format": "63",
        "on-click": "wofi -show drun -replace",
        "on-click-right": "~/.config/hypr/scripts/keybindings.sh",
        "tooltip": false
    },
    
    // Power Menu
    "custom/exit": {
        "format": "",
        "on-click": "wlogout",
        "tooltip": false
    },

    // Keyboard State
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "",
            "unlocked": ""
        }
    },

    // System tray
    "tray": {
        // "icon-size": 21,
        "spacing": 10
    },

    // Clock
    "clock": {
        // "timezone": "America/New_York",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%Y-%m-%d}"
    },

    //Weather

    "custom/weather": {
        //shows the current weather and forecast
        "tooltip" : true,
        "format" : "{}°C",
        "interval" : 3600,
        "exec" : "/usr/bin/wttrbar --date-format %d-%m-%Y --location Bucharest --hide-conditions",
        /*"exec": "~/.config/hypr/waybar/scripts/Weather.sh",*/
        "return-type" : "json"
    },

    // System
    "custom/system": {
        "format": "⟷",
        "tooltip": false
    },

    // Appps
    "custom/myapps": {
        "format": "",
        "tooltip": true,
        "tooltip-format": "Apps Menu"
    },

    // Stacer
    "custom/stacer": {
        "format": "",
        "on-click": "stacer",
        "tooltip": true
    },

    // Sport results
    "custom/sport": {
        "format": "",
        "on-click": "/home/just/Documents/idei/live-game-update/logos-functional_scores_GUI2.py",
        "tooltip": true
    },

    // Email
    "custom/thunderbird": {
        "format": "󰇯",
        "on-click": "thunderbird"
    },

    // Kitty terminal
    "custom/kitty": {
        "format": "",
        "on-click": "kitty"
    },

    // Remmina Desktop
    "custom/remmina": {
        "format": "",
        "on-click": "remmina"
    },

    // CPU
    "cpu": {
        "format": "/󰍛 {usage}% ",
        "on-click": "alacritty -e btop"
    },

    // Memory
    "memory": {
        "format": "/󰾅 {}% ",
        "on-click": "alacritty -e btop"
    },

    // Harddisc space used
    "disk": {
        "interval": 30,
        "format": " {percentage_used}% ",
        "path": "/",
        "on-click": "alacritty -e btop"
    }, 

    "hyprland/language": {
        "format": "/{short}⌨️"
    },

    // Group Hardware
    "group/hardware": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 300,
            "children-class": "not-memory",
            "transition-left-to-right": false
        },        
        "modules": [
            "custom/system",
            "disk",
            "cpu",
            "memory",
            "hyprland/language"
        ]
    },

    // Group Apps
    "group/myapps": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 300,
            "children-class": "not-memory",
            "transition-left-to-right": false
        },        
        "modules": [
            "custom/myapps",
            "custom/filemanager",
            "custom/kitty",
            "custom/browser",
            "custom/thunderbird",
            "custom/chatgpt",
            "custom/sublime",
            "custom/stacer",
            "custom/remmina",
            "custom/sport"
        ]
    },
    
    // Group Settings
    "group/settings": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 300,
            "children-class": "not-memory",
            "transition-left-to-right": false
        },        
        "modules": [
            "custom/settings",
            "custom/waybarthemes",
            "custom/wallpaper"
        ]
    },

    // Group Quicklinks
    "group/quicklinks": {
        "orientation": "horizontal",
        "modules": [
            "custom/filemanager",
            "custom/browser",
            "custom/sofi",
            "custom/chatgpt",
            "custom/sublime"
         ]
    },

    // Network
    "network": {
        "format": "{ifname}",
        "format-wifi": " {essid}({signalStrength}%)",
        "format-ethernet": "󰌗 {ipaddr}",
        "format-disconnected": "Not connected", //An empty format will hide the module.
        "tooltip-format": "󰌗 {ifname} via {gwaddri}",
        "tooltip-format-wifi": " {essid}({signalStrength}%)",
        "tooltip-format-ethernet": " {ifname}({ipaddr}/{cidr})",
        "tooltip-format-disconnected": "Disconnected",
        "max-length": 50,
        "on-click": "alacritty -e nmtui"
    },

    //MPD stuff
    "mpd": {
        "format": "{stateIcon} {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}{artist} - {album} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) ⸨{songPosition}|{queueLength}⸩ {volume}% ",
        "format-disconnected": "Disconnected ",
        "format-stopped": "{consumeIcon}{randomIcon}{repeatIcon}{singleIcon}Stopped ",
        "unknown-tag": "N/A",
        "interval": 2,
        "consume-icons": {
            "on": " "
        },
        "random-icons": {
            "off": "<span color=\"#f53c3c\"></span> ",
            "on": " "
        },
        "repeat-icons": {
            "on": " "
        },
        "single-icons": {
            "on": "1 "
        },
        "state-icons": {
            "paused": "",
            "playing": ""
        },
        "tooltip-format": "MPD (connected)",
        "tooltip-format-disconnected": "MPD (disconnected)"
    },

    //Player Control
    "custom/waybar-media": {
        "return-type": "json",
        "max-length": 25,
        "exec": "~/.config/hypr/waybar-media.py status",
        "on-click": "~/.config/hypr/waybar-media.py playpause",
        "on-scroll-up": "~/.config/hypr/waybar-media.py previous",
        "on-scroll-down": "~/.config/hypr/waybar-media.py next",
        "escape": true
    },

    // Battery
    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon}{capacity}%",
        "format-charging": " {capacity}%",
        "format-plugged": " {capacity}%",
        "format-alt": "{icon}{time}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": [" ", " ", " ", " ", " "]
    },

    // Pulseaudio
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{icon}{volume}%",
        "format-bluetooth": "{volume}% {icon} {format_source}",
        "format-bluetooth-muted": " {icon} {format_source}",
        "format-muted": " {format_source}",
        "format-source": "{volume}% ",
        "format-source-muted": "",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", " ", " "]
        },
        "on-click": "pavucontrol-qt"
    },

    // Bluetooth
    "bluetooth": {
        "format-disabled": "",
        "format-off": "",
        "interval": 30,
        "on-click": "blueman-manager"
    },

    // Other
    "user": {
        "format": "{user}",
        "interval": 60,
        "icon": false,
    }
}
